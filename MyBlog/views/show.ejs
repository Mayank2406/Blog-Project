<%- include ("partials/header") %>

<div class="container">
<div class="border">  
<div class="row">
    <div class="col-lg-12">
        <div class="thumbnail">
            <h4 style="display: flex; justify-content: space-around;"><a><%= blog.title %></a></h4>
            <img class="img-responsive" src="<%= blog.image %>" >
            <span><%= blog.created.toDateString() %></span>
            <div class="caption">
                <p><%- blog.body %></p>
                <a href="/blogs/<%=blog._id%>/edit" class="btn btn-sm btn-outline-primary">Edit</a>   
                <form id="delete" action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
                    <button  class="btn btn-sm btn-outline-danger">DELETE</button>
                </form>
            </div>
        </div>
    </div>
</div>
</div>
</div>



