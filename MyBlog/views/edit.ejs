<%- include ("partials/header") %>

<div class="container" style="text-align: center;">
    <div class="main-container">
        <div class="border">
            <div><h1>Edit <%=blog.title%></h1></div>
         <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <label>Title</label>
                <input type="text" name="blogs[title]" value="<%=blog.title%>" class="form-control">
            </div>
            <div class="form-group">
                <label>Image</label>
                <input type="text" name="blogs[image]" value="<%=blog.image%>" class="form-control">
            </div>
            <div class="form-group">
                <label>Blog Content</label>
                <textarea name="blogs[body]" cols="30" rows="8" class="form-control"><%=blog.body%></textarea>
            </div>
            <input type="submit" class="btn btn-outline-success" style="border-radius: 20px;">
        </form>
        </div>
    </div> 
</div>


<%- include ("partials/footer") %>









